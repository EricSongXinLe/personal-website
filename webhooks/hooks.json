[
    {
      "id": "redeploy-app",
      "execute-command": "/var/www/html/personal-website/webhooks/redeploy.sh",
      "command-working-directory": "/var/www/html/personal-website",
      "response-message": "Deployed...",
      "trigger-rule": {
        "and": [
          {
            "match": {
              "type": "payload-hmac-sha256",
              "secret": "MysticEric",
              "parameter": {
                "source": "header",
                "name": "X-Hub-Signature-256"
              }
            }
          },
          {
            "match": {
              "type": "value",
              "value": "refs/heads/master",
              "parameter": {
                "source": "payload",
                "name": "ref"
              }
            }
          }
        ]
      }
    }
  ]